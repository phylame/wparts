    <defaultCache maxElementsInMemory="256" overflowToDisk="true" timeToIdleSeconds="60" timeToLiveSeconds="300"/>
    <cache name="post" maxElementsInMemory="64" timeToIdleSeconds="300" timeToLiveSeconds="600"/>
    <cache name="tag" maxElementsInMemory="128" timeToIdleSeconds="60" timeToLiveSeconds="120"/>
</ehcache>
